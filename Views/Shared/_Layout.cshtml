<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinalMadonnaTizianoLab4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalMadonnaTizianoLab4.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/estilo.css" />

</head>
<body>
    <header style="background-color:red!important; color: white;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/IMG FINAL/LogoCocaColaHeader-Photoroom.png" style="width:100px;"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color:white;" asp-area="" asp-controller="Home" asp-action="Index">Principal</a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Empleado"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color:white;" asp-area="" asp-controller="Entrega" asp-action="Index">Entregas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" style="color:white;" asp-controller="EntregaDetalle" asp-action="Index">Detalle de entregas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" style="color:white;" asp-controller="Producto" asp-action="Index">Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" style="color:white;" asp-controller="Conductor" asp-action="Index">Conductores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" style="color:white;" asp-controller="Vehiculo" asp-action="Index">Vehículos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" style="color:white;" asp-controller="Provincia" asp-action="Index">Provincias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" style="color:white;" asp-controller="Localidad" asp-action="Index">Localidades</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:red; color:white;">
        <div class="container" style="color:white;">
            &copy; 2024 - Coca-Cola company - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>