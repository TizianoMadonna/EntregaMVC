@model Final_MadonnaTizianoLab4.Models.Entrega

@{
    ViewData["Title"] = "Editar entregas";
}

<h1>Editar</h1>

<h4>Entrega</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ConductorId" class="control-label"></label>
                <select asp-for="ConductorId" class="form-control" asp-items="ViewBag.ConductorId"></select>
                <span asp-validation-for="ConductorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehiculoId" class="control-label"></label>
                <select asp-for="VehiculoId" class="form-control" asp-items="ViewBag.VehiculoId"></select>
                <span asp-validation-for="VehiculoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalidadId" class="control-label"></label>
                <select asp-for="LocalidadId" class="form-control" asp-items="ViewBag.LocalidadId"></select>
                <span asp-validation-for="LocalidadId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEntrega" class="control-label"></label>
                <input asp-for="FechaEntrega" class="form-control" />
                <span asp-validation-for="FechaEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" id="btn-editar">Guardar</button>
            </div>

        </form>
    </div>
</div>

<div>
    <form asp-action="Index" method="get">
        <button id="btn-regresar" type="submit">Regresar</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<link rel="stylesheet" href="~/css/estilo.css">
